@model CarStore.Models.LoginViewModel

@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="panel">
    <div class="panel-heading">
        <h3>Авторизация</h3>
    </div>
    <div class="panel-body">
        <p class="lead"></p>
        @using (Html.BeginForm())
        {
            @Html.ValidationSummary()
            <div class="form-group">
                <label>Логин:</label>
                @Html.TextBoxFor(m => m.UserName, new { @class = "form-control", @placeholder = "user@mail.ru" })
            </div>
            <div class="form-group">
                <label>Пароль:</label>
                @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
            </div>
            <input type="submit" name="action" value="Войти" class="btn btn-primary" />
            @Ajax.ActionLink("Зарегистрироваться", "Registration", "Account", new AjaxOptions
             {
                HttpMethod = "GET"
            })
        }
    </div>
</div>
