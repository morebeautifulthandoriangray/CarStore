@model CarStore.Domain.Entities.ShippingDetails
@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<div class="panel">
    <h2>Регистрация</h2>

    @using (Html.BeginForm())
    {
        @Html.ValidationSummary();
        <h3>Данные</h3>

        <div class="form-group">
            <label>Ваше ФИО:</label>
            @Html.TextBoxFor(x => x.Name, new { @class = "form-control" })
        </div>

        <div class="form-group">
            <label>Ваш email</label>
            @Html.TextBoxFor(x => x.Line1, new { @class = "form-control" })
        </div>

        <div class="form-group">
            <label>Ваш номер телефона</label>
            @Html.TextBoxFor(x => x.Line2, new { @class = "form-control" })
        </div>

        <div class="form-group">
            <label>Город</label>
            @Html.TextBoxFor(x => x.City, new { @class = "form-control" })
        </div>

        <div class="form-group">
            <label>Страна</label>
            @Html.TextBoxFor(x => x.Country, new { @class = "form-control" })
        </div>

        <div class="form-group">
            <label>Пароль</label>
            @Html.TextBoxFor(x => x.Password, new { @class = "form-control", @type="password" })
        </div>

        <div class="text-center">
            <input class="btn btn-primary" type="submit" value="Зарегистрироваться" />
        </div>
    }
</div>
